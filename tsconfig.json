{
	"compilerOptions": {
	  "target": "ESNext",
	  "module": "ESNext",
	  "strict": false, // Not sure how smart this is: https://stackoverflow.com/a/70761605/4267429
	  "allowJs": true,
	  "jsx": "preserve",
	  "importHelpers": true,
	  "moduleResolution": "node",
	  "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true,
	  "sourceMap": true,
	  "baseUrl": ".",
	  "types": ["webpack-env"],
	  "paths": {
		"@/*": ["src/*"]
	  },
	  "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx"],
	"exclude": ["node_modules", "dist"]
}
